<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

            <!--   INPUT PAGE     -->

    <style name="InputImageView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:onClick">selectImg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="InputTextView" >
        <item name="android:textColor">@color/playBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>
    <style name="InputEditText" >
        <item name="android:backgroundTint">@color/playPurple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/playBlack</item>
    </style>
    <style name="InputRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:buttonTint">@color/playPurple</item>
        <item name="android:textSize">16dp</item>
    </style>

            <!--   DASH PAGE     -->

    <style name="dashTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/playGreyer</item>
        <item name="android:layout_weight">1</item>
    </style>


            <!--   HOME PAGE     -->

    <style name="homeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/playBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="homeBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/playWhite</item>
        <item name="backgroundTint">@color/playPurple</item>
        <item name="android:onClick">addPerson</item>
        <item name="android:fontFamily">@font/nunitobold</item>
        <item name="android:text">add new</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:background">@drawable/background_btn</item>
    </style>


            <!--   PERSON ITEM PAGE     -->

    <style name="personItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/playBlack</item>
    </style>


            <!--   PERSON PAGE     -->

    <style name="personTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/playGreyer</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:fontFamily">@font/nunregular</item>
    </style>
    <style name="personConstrainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/playBlack</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/nunregular</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="personConstrain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_page</item>
    </style>






</resources>