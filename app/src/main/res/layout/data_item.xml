<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp"

    >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@drawable/background_page"
                android:padding="16dp"
                android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/playPurple"
                        android:text="TextView"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fpContent"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="weeqwre"
                    android:textColor="@color/playBlack"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fpDate" />

                <TextView
                    android:id="@+id/fpBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextVie"
                    android:textColor="@color/playPurple"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>